<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>{{user.profile.name}}'s VTH</title>

	{{> common_import}}

	<link rel="stylesheet" href="styles/main.css">
	<script src="javascript/app.js"></script>
</head>
<body class="app-body">
	<!-- Nav -->
	{{> app_nav name=user.profile.name}}
	<main class="container">

		<!-- Progress Bar -->
		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-8">
				{{> app_mainProgBar name=user.profile.name}}
			</div>
		</div>

		<div class="row">
			<!-- Nearby Points -->
			<div class="col-md-6">
				<h4>Welcome to:</h4>
				<div id="currentPlaceContainer">
					<div class="loading"></div>
				</div>
				<h4>Nearby:</h4>
				<div id="placesContainer">
					<!-- Spinner -->
					<div class="loading"></div>
				</div>
			</div>
			<!-- Goals -->
			<div class="col-md-6">
				<!-- Render all goals -->
				{{> app_goal_cards}}
			</div>
		</div>

	<!-- MODALS -->
	{{> app_modal_newGoal trailOptions=trailList}}
	</main>
</body>
</html>